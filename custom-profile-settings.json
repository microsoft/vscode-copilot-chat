{
	"// Custom Copilot Profile Settings": "Optimized for testing custom authentication",

	"// Extension Development": {
		"extensions.autoCheckUpdates": false,
		"extensions.autoUpdate": false,
		"extensions.ignoreRecommendations": true,
		"workbench.startupEditor": "none",
		"workbench.editor.enablePreview": false
	},

	"// Copilot Configuration": {
		"github.copilot.enable": {
			"*": true,
			"plaintext": true,
			"markdown": true,
			"typescript": true,
			"javascript": true,
			"python": true
		},
		"github.copilot.advanced": {
			"debug.overrideEngine": "codex",
			"debug.overrideProxyUrl": "",
			"debug.testOverrideProxyUrl": "",
			"debug.useNodeFetcher": false
		}
	},

	"// Debug and Development": {
		"debug.console.fontSize": 12,
		"debug.console.lineHeight": 18,
		"debug.console.wordWrap": true,
		"debug.internalConsoleOptions": "openOnSessionStart",
		"debug.openDebug": "openOnDebugBreak",
		"debug.showInStatusBar": "always"
	},

	"// Terminal": {
		"terminal.integrated.fontSize": 12,
		"terminal.integrated.lineHeight": 1.2,
		"terminal.integrated.scrollback": 10000
	},

	"// Editor": {
		"editor.fontSize": 13,
		"editor.lineHeight": 1.5,
		"editor.tabSize": 4,
		"editor.insertSpaces": false,
		"editor.detectIndentation": false,
		"editor.formatOnSave": false,
		"editor.codeActionsOnSave": {},
		"files.autoSave": "afterDelay",
		"files.autoSaveDelay": 2000
	},

	"// Custom Authentication Environment": {
		"terminal.integrated.env.osx": {
			"USE_CUSTOM_AUTH": "true",
			"CUSTOM_COPILOT_API_KEY": "test-api-key-12345",
			"CUSTOM_COPILOT_ENDPOINT": "https://test-auth.example.com/token",
			"CUSTOM_ORG_PROVIDER": "CustomOrg",
			"COPILOT_LOG_TELEMETRY": "true",
			"VSCODE_DEV_DEBUG": "1"
		}
	}
}
