#!/usr/bin/env pwsh
# Pure PowerShell wrapper script for Unix-like systems
# This script will work on macOS and Linux with PowerShell Core installed

$ScriptDir = Split-Path $MyInvocation.MyCommand.Path -Parent
$CopilotScript = Join-Path $ScriptDir "copilot.ps1"

if (Test-Path $CopilotScript) {
    & $CopilotScript @args
} else {
    Write-Error "Could not find copilot.ps1 in $ScriptDir"
    exit 1
}